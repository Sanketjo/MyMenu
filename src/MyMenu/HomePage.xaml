<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" Title="{Binding Title}" x:Class="MyMenu.HomePage">
	<ContentPage.Content>
		<ListView x:Name="menuItems" HasUnevenRows="true" ItemsSource="{Binding FoodItems}">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<StackLayout Orientation="Vertical">
							<Image Source="{Binding FoodItem.PictureLarge}" VerticalOptions="StartAndExpand" HorizontalOptions="StartAndExpand" />
							<Grid Padding="8,0">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*" />
									<ColumnDefinition Width="Auto" />
								</Grid.ColumnDefinitions>
								<Label Text="{Binding FoodItem.Name}" VerticalOptions="Fill" FontSize="20" TextColor="#E91E63" />
								<Label Text="{Binding Price}" FontSize="20" Grid.Column="1" TextColor="#E91E63" />
							</Grid>
							<Grid HorizontalOptions="StartAndExpand" Padding="8,0">
								<Label LineBreakMode="WordWrap" Text="{Binding FoodItem.Description}" TextColor="Gray" />
							</Grid>
							<Button Text="Add" />
						</StackLayout>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</ContentPage.Content>
</ContentPage>